/* pages/home/home.wxss */
.weui-search-bar {
  background-color: #42BD55;
}
.row {
  margin-bottom: 30rpx;
}
.title-wrapper {
  display: flex;
  justify-content: space-between;
  margin-left: 30rpx;
  align-items: center;
  margin-bottom: 30rpx;
}
.title {
  font-weight: bold;
  font-size: 34rpx;
}
.title-right {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.title-right .more {
  font-size: 30rpx;
  color: #42BD55;
}
.title-right .arraw {
  width: 12rpx;
  height: 12rpx;
  color: #42BD55;
  border: 1 solid #42BD55;
  border-top: none;
  border-left: none;
  transform: rotateZ(-45deg);
}
.scroll-view__movie {
  height: 402rpx;
  white-space: nowrap;
}
.scroll-view__movie .item {
  margin-left: 30rpx;
}